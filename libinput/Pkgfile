# Description: Handle input devices for display servers
# URL:         https://www.freedesktop.org/wiki/Software/libinput
# Depends on:  eudev mtdev xorg-libevdev

# Maintainer notes on dependencies:
#   wayland-protocols: (enabled if installed)

name=libinput
version=1.30.1
release=1
source=https://gitlab.freedesktop.org/$name/$name/-/archive/$version/$name-$version.tar.bz2

build() {
	meson setup build $name-$version \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--buildtype=plain \
		--wrap-mode=nodownload \
		-D b_pie=true \
		-D b_lto=true \
		-D udev-dir=/lib/udev \
		-D debug-gui=false \
		-D documentation=false \
		-D libwacom=false \
		-D mtdev=true \
		-D tests=false \
		-D install-tests=false \
		-D zshcompletiondir=no \

	ninja -C build -j ${JOBS:-1} -v
	DESTDIR=$PKG ninja -C build install
}
