# Description: Mesa 3D Graphics Library
# URL:         https://www.mesa3d.org
# Depends on:  elfutils glslang libdrm libglvnd llvm py3-mako xorg-libxdamage xorg-libxrandr xorg-libxshmfence xorg-libxvmc xorg-libxxf86vm libva libvdpau
# Optional:    libva libvdpau wayland-protocols

name=mesa
version=23.1.1
release=1
source=https://archive.mesa3d.org/$name-$version.tar.xz

build() {
	if pkgman isinst libvdpau ; then
		PKGMK_MESA="$PKGMK_MESA -D gallium-vdpau=enabled"
	else
		PKGMK_MESA="$PKGMK_MESA -D gallium-vdpau=disabled"
	fi
	if pkgman isinst vulkan-loader ; then
		PKGMK_MESA_GALLIUM="zink,"
	fi

	## for future references
	#if pkgman isinst wayland-protocols; then
	#   PKGMK_MESA_PLATFORMS="$PKGMK_MESA_PLATFORMS,wayland"
	#else
	#if pkgman isinst xorg-libxdamage xorg-libxrandr \
	#	xorg-libxshmfence xorg-libxvmc xorg-libxxf86vm; then
	#	PKGMK_MESA_PLATFORMS+=',x11'
	#fi

	CFLAGS="$CFLAGS -mtls-dialect=gnu"
	CXXFLAGS="$CXXFLAGS -mtls-dialect=gnu"
	meson setup build mesa-$version $PKGMK_MESA \
		--prefix=/usr \
		--sysconfdir=/etc \
		--buildtype=plain \
		--wrap-mode=nodownload \
		-D b_lto=true \
		-D b_pie=true \
		-D dri3=enabled \
		-D egl=enabled \
		-D llvm=enabled \
		-D shared-llvm=enabled \
		-D gbm=enabled \
		-D gles1=disabled \
		-D gles2=enabled \
		-D glx=dri \
		-D osmesa=true \
		-D gallium-xa=enabled \
		-D gallium-drivers=${PKGMK_MESA_GALLIUM}crocus,iris,\
nouveau,r300,r600,radeonsi,svga,swrast,virgl,i915 \
		-D platforms=x11 \
		-D shared-glapi=enabled \
		-D vulkan-drivers=amd,intel \
		-D vulkan-layers=device-select,intel-nullhw,overlay \
		-D video-codecs=vc1dec,h264dec,h264enc,h265dec,h265enc \
		-D glvnd=true

	ninja -C build -j ${JOBS:-1} -v
	DESTDIR=$PKG ninja -C build install

	# indirect rendering symlink
	ln -s libGLX_mesa.so.0 $PKG/usr/lib/libGLX_indirect.so.0
}
