# Description: Userspace interface to kernel DRM services
# URL:         https://gitlab.freedesktop.org/mesa/drm
# Depends on:  docutils xorg-libpciaccess

name=libdrm
version=2.4.127
release=1
source=https://dri.freedesktop.org/$name/$name-$version.tar.xz

build() {
	# meson args:
	# * udev=true         - use udev instead of mknod(1)
	# * man-pages=enabled - requires docutils for man page generation

	meson setup build $name-$version        \
		--prefix=/usr                   \
		--buildtype=plain               \
		--wrap-mode=nodownload          \
		-D b_lto=true                   \
		-D b_pie=true                   \
		-D man-pages=enabled            \
		-D udev=true                    \
		-D valgrind=disabled            \
		-D cairo-tests=disabled         \
		-D intel=enabled                \
		-D nouveau=enabled              \
		-D radeon=enabled               \
		-D amdgpu=enabled               \
		-D omap=enabled                 \
		-D install-test-programs=false  \
		-D tests=false                  \

	ninja -C build -j ${JOBS:-1} -v
	DESTDIR=$PKG ninja -C build install
}
