# Description: Userspace interface to kernel DRM services
# URL:         https://gitlab.freedesktop.org/mesa/drm
# Depends on:  docutils xorg-libpciaccess

# Maintainer notes on dependencies:
#   man-pages=enabled: Build man pages, needs docutils (enabled)
#   udev=true: Use udev instead of mknod(1), needs eudev (enabled)

name=libdrm
version=2.4.130
release=1
#source=https://dri.freedesktop.org/$name/$name-$version.tar.gz
source=https://gitlab.freedesktop.org/mesa/$name/-/archive/$name-$version/$name-$name-$version.tar.gz

build() {
	meson setup build $name-$name-$version \
		--prefix=/usr \
		--buildtype=plain \
		--wrap-mode=nodownload \
		-D b_lto=true \
		-D b_pie=true \
		-D man-pages=enabled \
		-D udev=true \
		-D valgrind=disabled \
		-D cairo-tests=disabled \
		-D intel=enabled \
		-D nouveau=enabled \
		-D radeon=enabled \
		-D amdgpu=enabled \
		-D omap=enabled \
		-D install-test-programs=false \
		-D tests=false \

	ninja -C build -j ${JOBS:-1} -v
	DESTDIR=$PKG ninja -C build install

	# Normalize man pages: uppercase all .SH section headers
	sed -i 's/^\.SH .*/\U&/g' $PKG/usr/share/man/man*/*.[0-9]
}
