# Description: XML/HTML/XHTML Markup safe string for Python
# URL:         http://pypi.python.org/pypi/MarkupSafe
# Depends on:  py3-setuptools

name=py3-markupsafe
version=2.1.5
release=2
source=https://pypi.io/packages/source/M/MarkupSafe/MarkupSafe-$version.tar.gz

build() {
	cd MarkupSafe-$version

	gpep517 build-wheel --wheel-dir .dist --output-fd 3 3>&1 >&2
	/usr/bin/python3 -m installer -d $PKG .dist/*.whl

	/usr/bin/python3     -m compileall $PKG
	/usr/bin/python3 -O  -m compileall $PKG
	/usr/bin/python3 -OO -m compileall $PKG
}
